For 1^2+2^2+3^2+4^2................N^2
#include<stdio.h>
int main()
{
	int i,N;
	unsigned long sum;
	printf("Enter the value of N: ");
	scanf("%d",&N);
    sum=0;
	for(i=1;i<=N;i++)
		sum= sum+ (i*i);
	printf("Sum of the series is: %d\n",sum);
	
	return 0;
}
output:
Enter the value of N: 5
Sum of the series is: 55

For 1+1/2+1/3+1/4+1/5.............1/n

 #include<stdio.h>
    int main()
{
	int i,N;
	float sum;
    printf("Enter the value of N: ");
	scanf("%d",&N);
	sum=0.0f;
for(i=1;i<=N;i++)
		sum = sum + ((float)1/(float)i);
	printf("Sum of the series is: %f\n",sum);
 output:
 Enter the value of N: 6
Sum of the series is: 2.450000

return 0;
}
