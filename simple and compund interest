#include <stdio.h>
int main()
{

    int principal, rate, time, interest;

    printf("Enter the principal: ");
    scanf("%d", &principal);

    printf("Enter the rate: ");
    scanf("%d", &rate);

    printf("Enter the time: ");
    scanf("%d", &time);

    interest = (principal * rate * time) / 100;
    printf("The Simple interest is %d", interest);
    return 0;
}
output;
Enter the principal: 4016
Enter the rate: 9
Enter the time: 5
The Simple interest is 1807

2)#include<stdio.h>
#include <math.h>
int main()
{
    int principle,time, CI;
    float rate;

   
    printf("Enter principle (amount): ");
    scanf("%d", &principle);

    printf("Enter time: ");
    scanf("%d", &time);

    printf("Enter rate: ");
    scanf("%f", &rate);

    
    CI = principle* (pow((1 + rate / 100), time));

   
    printf("Compound Interest = %d", CI);

    return 0;
}
output;
Enter principle (amount): 1200
Enter time: 2
Enter rate: 5.9
Compound Interest = 1345
